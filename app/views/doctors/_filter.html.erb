
 <%= simple_form_for @search, url: doctors_path, method: :get do |f| %>
  <%= f.input :name, placeholder: "Type a name", label_html: { class: "search-title" }, input_html: { class: "search-name" }, wrapper_html: { class: "search-box" } %>
  <br>

  <%= f.input :rating, placeholder: "Minimum Rating", :collection => 1..5, label_html: { class: "search-title" }, input_html: { class: "search-name" }, wrapper_html: { class: "search-box" }%>
  <br>
  <%=f.input :specialty, placeholder: "Type a specialty", :collection => Specialty.all_specialties, label_html: { class: "search-title" }, input_html: { class: "search-name" }, wrapper_html: { class: "search-box" } %>
  <br>
  <%= f.button :submit, class: "btn-treehouse" %>
<% end %>
