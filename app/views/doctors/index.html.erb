<div class="wrapper-index">
<div class="all" style="background-image: linear-gradient(180deg, rgba(0,101,168,0.2) 0%, rgba(255,255,255,0.4) 50%), url('http://res.cloudinary.com/livpuppa/image/upload/v1493238698/city_iw0rls.jpg');">


<h2 class="text-center">Your Doctor Search Results for: <%= @name %> </h2>
  <div class="container">
    <div class="wrapper-flex">
      <div class="filter-index">
        <h3> <i class="fa fa-filter" aria-hidden="true"></i> Narrow your search results </h3>
        <h6> <%= link_to "x Reset Filter",  doctors_path %> </h6>
        <%= render 'filter' %>
      </div>
      <div class="wrapper-doctor-cards">
          <div class="row">
            <div class="col-xs-12">
              <% @doctors.each do |doctor|%>

                <div class="card-doctor">

                  <div class="doctor-contact">
                    <h3 class= "card-doctor-name"> <%= link_to doctor.name, doctor_path(doctor) %> </h3>
                    <p class="card-doctor-address"> <%= doctor.street_name %> <br> <%= doctor.city_name %></p>
                    <p class="card-doctor-specialty">
                      <% doctor.specialties.each do |specialty| %>
                        <%= specialty.name %>
                      <% end %>
                    </p>
                    <img class= "card-doctor-profile" src= <%= doctor.photo %> alt="">
                  </div>
                  <div class="rating-info">
                    <div class="btn-treehouse card-doctor-index-rating-button"> Review!</div>
                    <div class="card-doctor-rating-description"> Rating </div>
                    <div class="card-doctor-rating-average"> <%= doctor.average_review.to_f.round(1) %> </div>
                    <div class="card-doctor-amount-of-reviews"> <%= doctor.reviews.count %> Reviews </div>
                  </div>
                </div>
              <%end%>
            </div>
          </div>
        </div>
    </div>
  </div>
</div>
</div>
